<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <Button
        android:id="@+id/rbutton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_centerInParent="true"
        android:text="Button 3" />
    
    <Button
        android:id="@+id/rbutton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/rbutton3"
        android:layout_toLeftOf="@id/rbutton3"
        android:text="Button 1" />
    <Button
        android:id="@+id/rbutton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/rbutton3"
        android:layout_toRightOf="@id/rbutton3"
        android:text="Button 2" />
    
    <Button
        android:id="@+id/rbutton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rbutton3"
        android:layout_toLeftOf="@id/rbutton3"
        android:text="Button 4" />
    <Button
        android:id="@+id/rbutton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rbutton3"
        android:layout_toRightOf="@id/rbutton3"
        android:text="Button 5" />

</RelativeLayout>
